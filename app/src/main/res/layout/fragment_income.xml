<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f3f3f3">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/frag_record_in_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <ImageView
            android:id="@+id/frag_record_in_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/others" />

        <TextView
            android:id="@+id/frag_record_in_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:layout_toRightOf="@+id/frag_record_in_iv"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/frag_record_in_et_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:background="@color/white"/>
    </RelativeLayout>
    <View
        android:id="@+id/frag_record_in_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/frag_record_in_rl_top"
        android:background="@color/grey_f3f3f3"/>
    <GridView
        android:id="@+id/frag_record_in_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_record_in_line"
        android:numColumns="5"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_below="@+id/frag_record_in_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/frag_record_in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="2023年1月5日"/>
        <TextView
            android:id="@+id/frag_record_in_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  添加备注"
            android:drawableLeft="@mipmap/remark0"
            android:textColor="@color/geen_01847F"
            android:layout_toLeftOf="@+id/frag_record_in_time"
            android:padding="10dp"/>

    </RelativeLayout>

    <!--自定义软键盘-->
    <android.inputmethodservice.KeyboardView
        android:id="@+id/frag_record_in_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keyBackground="@color/white"
        android:keyTextColor="@color/black"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="1dp"
        android:layout_alignParentBottom="true"
        android:shadowColor="@color/grey_f3f3f3"
        android:shadowRadius="0.0"/>


</RelativeLayout>
